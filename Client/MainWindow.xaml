<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="577" Width="318" WindowStyle="None" Background="{x:Null}" AllowsTransparency="True">
    <Grid>
        <Border CornerRadius="20,20,20,20">
            <Border.Effect>
                <BlurEffect Radius="7" RenderingBias="Performance" KernelType="Gaussian"/>
            </Border.Effect>
            <Border.Background>
                <ImageBrush ImageSource="/Style/demo1.png" Stretch="UniformToFill"/>
            </Border.Background>

        </Border>
        <Grid>

        </Grid>
    </Grid>
</Window>
